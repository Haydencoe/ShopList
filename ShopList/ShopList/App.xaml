             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.App">
	<Application.Resources>
       
        <Style TargetType="Button" Class="main">
            <Setter Property="BackgroundColor" Value="#32AE96"/>
