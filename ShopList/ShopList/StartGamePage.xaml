<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.StartGamePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" BackgroundColor="White"  >




            <Label Text="Game is Starting in..."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="Large"      
                TextColor="Black"      
                   
                   />

            <Label x:Name="timeLabel" 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                TextColor="Black"   
                FontSize="50" 
                   
                   />



        </StackLayout>
    </ContentPage.Content>
</ContentPage>