<?xml version = "1.0" encoding = "utf-8" ?>
<ContentPage  xmlns = "http://xamarin.com/schemas/2014/forms"
             xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class = "ShopList.BluetoothScreenPage" >
    <ContentPage.Content>
        <StackLayout >
            <Button Text = "Search" Clicked = "searchDevice" Margin="0,50,0,0" class="otherMain"/>
            <ListView x:Name = "DevicesList"
                      IsPullToRefreshEnabled = "true"
                      CachingStrategy = "RecycleElement"
                      ItemSelected = "DevicesList_OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Margin="10,10,10,10" Text = "{Binding NativeDevice.Name}" > </Label >
                                <Label  Text = "{Binding NativeDevice.Address}" > </Label >
                            </StackLayout >
                        </ViewCell >
                    </DataTemplate >
                </ListView.ItemTemplate>
            </ListView >
        </StackLayout >
    </ContentPage.Content>
</ContentPage >